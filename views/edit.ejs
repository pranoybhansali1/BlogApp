<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label><h4>Title</h4></label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label><h4>Image</h4></label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label><h4>Blog Content</h4></label>
			<textarea name="blog[body]" required>value="<%= blog.body %>"></textarea>
		</div>
		<input class="ui secondary button" type="submit" value="Update">
	</form>
</div>

<%- include("partials/footer") %>
