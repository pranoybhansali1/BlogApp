<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">Blogzzz</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(blog){ %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title %></a>
						<div class="meta">
							<p> Date created: <span><%= blog.created.toDateString() %></span> </p>
						</div>
						<div class="description">
							<p> <%- blog.body.substring(0,90) %>... </p>
						</div>
						<div class="extra">
							<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">Read More<i class="angle double right icon"></i></a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>		
	</div>
</div>

<%- include("partials/footer") %>
